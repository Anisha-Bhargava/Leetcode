OPTIMAL SOLUTION



BRUTE FORCE 

class Solution {
public:
    ListNode* sortList(ListNode* head) {
        vector<int>vec;
        ListNode* temp = head;
        while(temp != NULL){
            vec.push_back(temp->val);
            temp=temp->next;
        }
        sort(vec.begin(),vec.end());
        int i=0;
        temp=head;
        while(temp!=NULL){
            temp->val=vec[i];
            i++;
            temp=temp->next;
        }
        return head;
    }
};
